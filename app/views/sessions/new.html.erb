<div class="login-container animated fadeInDown">
  <div class="loginbox bg-white">
    <div class="loginbox-title">ENTRAR</div>
    <%= form_for :session, url: sign_in_path do |f| %>
        <div class="loginbox-textbox">
          <%= f.text_field :login, autofocus: true, class: 'form-control', placeholder: 'Email' %>
        </div>
        <div class="loginbox-textbox">
          <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: 'Senha' %>
        </div>
        <div class="loginbox-submit">
          <%= f.submit "Log in", class: 'btn btn-primary btn-block', type: 'button' %>
        </div>
        <div class="loginbox-signup">
          Novo Usuario? <%= link_to "Cadastre-se!", new_user_path %>
        </div>
    <% end %>
  </div>
</div>